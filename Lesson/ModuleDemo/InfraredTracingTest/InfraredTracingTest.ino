 void setup() {
 Serial.begin(9600);
}
void loop() {
  int left, centre, right;
  left = analogRead(A0);
  centre = analogRead(A1);
  right = analogRead(A2);
  Serial.print("right:");
  Serial.print(right);
  Serial.print("   ");
  Serial.print("centre:");
  Serial.print(centre);
  Serial.print("   ");
  Serial.print("left:");
  Serial.print(left);
  Serial.println("   ");
}
